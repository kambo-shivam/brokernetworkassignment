<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_kotlin_static</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.HiltDemo</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_branding</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_200</item>
        <item name="android:navigationBarColor">@color/purple_200</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>